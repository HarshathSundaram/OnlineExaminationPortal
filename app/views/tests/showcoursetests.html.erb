<div class="card-body">
    <h4 class="card-title">Tests in the Course <%=@course.name%></h4>
</div>

<%if @tests.blank?%>
    <p class="text-danger m-3">There is No tests in this Course <%=@course.name%></p>
<%else%>
    <%@tests.each do|test|%>
        <div class="card m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= test.name%></h5>
                <%= link_to "Delete", test_course_delete_path(@course,test), data:{
                    turbo_method: "delete",
                    turbo_confirm: "Are You Sure"
                }, class: "btn btn-danger" %>
            </div>
        </div>
    <%end%>
<%end%>

<%= link_to "Create Test", test_course_question_path(@course), class: "btn btn-primary m-3" %>


