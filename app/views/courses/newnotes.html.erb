<style>
body{
  background-image: url("https://images.pexels.com/photos/4491461/pexels-photo-4491461.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1");
  background-size: cover;
  background-position: center;
}
@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.container {
  animation: fadeIn 3s;
}
</style>


<div class="container ">
  <div class="row d-flex justify-content-center align-items-center mx-auto" style="height: 100vh;">
    <div class="col-md-6">
      <div class="card opacity-25">
        <div class="card-body">
          <h3 class="card-title text-center">Add new Notes</h3>
          <p class="card-text text-center">Enter the details below:</p>
          <div class="form text-center mt-4">
            <%=form_with url:create_course_notes_path(@instructor,@course),local: true do |form|%>
                <div class="input-group m-3" style="width:30rem;">
                        <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">Topic Notes: </span>
                        </div>
                        <%= form.file_field :notes, class: "form-control" %>
                    </div>
                    <% if @course.errors[:notes].any? %>
                        <div class="alert alert-danger m-3">
                        <% @course.errors.full_messages_for(:notes).each do |message| %>
                            <p><%= message %></p>
                        <% end %>
                        </div>
                    <% end %>
                </div>
                <div class = "text-center">
                    <%=form.submit class:"btn btn-primary m-3"%>
                </div>
            <%end%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>