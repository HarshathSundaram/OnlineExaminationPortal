<%= form_with model: [@instructor, @course] do |form| %>
  <div class="input-group m-3" style="width:30rem;">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Course Name: </span>
    </div>
    <%= form.text_field :name, class: "form-control" %>
  </div>
  <% if @course.errors[:name].any? %>
    <div class="alert alert-danger m-3">
      <% @course.errors.full_messages_for(:name).each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="input-group m-3" style="width:30rem;">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Course Category: </span>
    </div>
    <%= form.text_field :category, class: "form-control" %>
  </div>
  <% if @course.errors[:category].any? %>
    <div class="alert alert-danger m-3">
      <% @course.errors.full_messages_for(:category).each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div class="input-group m-3" style="width:30rem;">
    <div class="input-group-prepend">
      <span class="input-group-text" id="basic-addon1">Course Notes: </span>
    </div>
    <%= form.file_field :notes, class: "form-control" %>
  </div>
  <% if @course.errors[:notes].any? %>
    <div class="alert alert-danger m-3">
      <% @course.errors.full_messages_for(:notes).each do |message| %>
        <p><%= message %></p>
      <% end %>
    </div>
  <% end %>

  <div>
    <%= form.submit class: "btn btn-primary m-3" %>
  </div>
<% end %>




 