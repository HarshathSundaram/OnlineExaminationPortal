<div class="card m-2" style="width: 18rem;">
  <div class="card-body">
    <h5 class="card-title">Course: <%= @course.name%></h5>
    <h6 class="card-subtitle mb-2 text-muted">Instructor <%= @course.instructor.name%></h6>
    <h6 class="card-subtitle mb-2 text-muted">Category: <%= @course.category%></h6>
  </div>
</div>

<%if @course.tests.blank?%>
    <p class="text-danger">No Tests available for this course</p>
<%else%>
    <%@course.tests.each do |test|%>
        <div class="card m-2" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= test.name%></h5>
                <%= link_to "Take test", student_course_tests_take_path(@student,@course,test), class: "btn btn-primary" %>
            </div>
        </div>
    <%end%>
<%end%>

