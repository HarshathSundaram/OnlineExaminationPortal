<div  class="row d-flex justify-content-center align-items-center">
    <h1 class="display-4 text-center">Tests in the topic <%=@topic.name%></h1>
    <h4 class="text-center m-2"><i class="fas fa-book"></i> <%=@course.name%></h4>
    <h4 class="text-center m-2"><i class="fas fa-user"></i> <%=@course.instructor.user.name%></h4>
    <%if @tests.blank?%>
    <p class="text-danger text-center">There is No tests in this Topic <%=@topic.name%>  &#128532;</p>
    <%else%>
        <%@tests.each do|test|%>
            <div class="card m-3" style="width: 18rem;">
                <div class="card-body">
                    <h2 class="card-title"><%= test.name%></h2>
                    <h4 class="card-subtitle mb-2 text-muted"><%= test.testable_type%></h4>
                    <h4 class="card-subtitle mb-2 text-muted"><%=test.created_at.to_s.split(" ")[0]%></h4>
                    <%= link_to "Take test", student_topic_tests_take_path(@student,@course,@topic,test), class: "btn btn-primary w-100" %>
                </div>
            </div>
        <%end%>
    <%end%>
</div>


<style>
  .card, .display-4{
    font-family: 'Crimson Text', serif;
  }
</style>