<div class="m-3">
    <h5 class="card-title"><%= @course.name%></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @course.instructor.name%></h6>
    <p class="card-text"><%= @course.category%></p>
    <%= link_to "View Tests", students_course_tests_path(@student,@course), class: "btn btn-primary" %>  
    <div class="p-5">
        <%if @course.topics.blank?%>
            <p class="text-danger">There is no topic for <%= @course.name%></p>
        <%else%>
            <h3 class="text-secondary">Topics in this course are</h3>
            <%@course.topics.each do |topic|%>
                <div class="card m-2", style="width:30rem;">
                    <div class="card-body">
                        <h5 class="card-title"><%=topic.name%></h5>
                        <p class="card-text"><%=topic.description%></p>
                        <%=link_to "View", student_course_topic_path(@student,@course,topic.id), class: "btn btn-info" %>
                    </div>
                </div>
            <%end%>
        <%end%>
    </div>
</div>
